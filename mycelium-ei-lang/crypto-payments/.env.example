# Mycelium Payment Gateway Environment Configuration
# Copy this file to .env and fill in your actual API credentials

# Coinbase Commerce API Configuration
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_WEBHOOK_SECRET=your_coinbase_webhook_secret_here

# OAuth Client Configuration (for advanced integrations)
OAUTH_CLIENT_ID=5bc1d0f3-894f-4d02-988e-b36076530b1c
OAUTH_CLIENT_SECRET=your_oauth_secret_here

# Payment Gateway API Configuration
API_SECRET_KEY=your_api_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_here

# Database Configuration (optional)
DATABASE_URL=postgresql://user:password@localhost:5432/mycelium_payments

# Server Configuration
PORT=8000
HOST=0.0.0.0
DEBUG=false

# Email Configuration (for notifications)
EMAIL_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=noreply@mycelium-ei-lang.com

# Security Configuration
CORS_ORIGINS=https://mycelium-ei-lang.com,https://www.mycelium-ei-lang.com
RATE_LIMIT_PER_MINUTE=100

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=payment_gateway.log

# Feature Flags
ENABLE_DEMO_MODE=true
ENABLE_ANALYTICS=true
ENABLE_WEBHOOK_VERIFICATION=true