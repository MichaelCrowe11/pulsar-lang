# ===========================================
# CROWE LOGIC PLATFORM - ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env.local for development
# Copy this file to .env.production for production

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://croweos.com
PORT=3000

# Database
DATABASE_URL=postgresql://crowe:CHANGE_ME@localhost:5432/crowe_platform
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=CHANGE_ME
SESSION_SECRET=CHANGE_ME_TO_RANDOM_64_CHAR_STRING

# Authentication
JWT_SECRET=CHANGE_ME_TO_RANDOM_64_CHAR_STRING
JWT_EXPIRY=7d
NEXTAUTH_URL=https://croweos.com
NEXTAUTH_SECRET=CHANGE_ME_TO_RANDOM_64_CHAR_STRING

# OAuth Providers
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# AI Providers (Keep actual provider hidden)
ANTHROPIC_API_KEY=sk-ant-CHANGE_ME
OPENAI_API_KEY=sk-CHANGE_ME
XAI_API_KEY=xai-CHANGE_ME

# Oracle Cloud Infrastructure
OCI_TENANCY_OCID=ocid1.tenancy.oc1..CHANGE_ME
OCI_USER_OCID=ocid1.user.oc1..CHANGE_ME
OCI_FINGERPRINT=CHANGE_ME
OCI_PRIVATE_KEY_PATH=/path/to/oci_api_key.pem
OCI_REGION=us-ashburn-1

# Integrations
SLACK_TOKEN=xoxb-CHANGE_ME
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/CHANGE_ME
NOTION_TOKEN=secret_CHANGE_ME
NOTION_DATABASE_ID=CHANGE_ME
ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/CHANGE_ME
PIPEDREAM_ENDPOINT=https://api.pipedream.com/v1/CHANGE_ME
ELEVENLABS_API_KEY=CHANGE_ME
ELEVENLABS_VOICE_ID=CHANGE_ME

# Monitoring & Analytics
SENTRY_DSN=https://CHANGE_ME@sentry.io/CHANGE_ME
DATADOG_API_KEY=CHANGE_ME
DATADOG_APP_KEY=CHANGE_ME
GOOGLE_ANALYTICS_ID=G-CHANGE_ME
MIXPANEL_TOKEN=CHANGE_ME

# Email Service
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=SG.CHANGE_ME
EMAIL_FROM=noreply@croweos.com

# Storage
AWS_ACCESS_KEY_ID=CHANGE_ME
AWS_SECRET_ACCESS_KEY=CHANGE_ME
AWS_REGION=us-east-1
S3_BUCKET=crowe-platform-storage

# Security
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGINS=https://croweos.com,https://www.croweos.com
CSP_REPORT_URI=https://croweos.com/api/csp-report

# Docker/VSCode Server
CODE_SERVER_PASSWORD=CHANGE_ME
SUDO_PASSWORD=CHANGE_ME
DB_PASSWORD=CHANGE_ME

# Feature Flags
ENABLE_QUANTUM_MODULE=true
ENABLE_ML_LAB=true
ENABLE_AGRICULTURE=true
ENABLE_MYCOLOGY_LIMS=true
ENABLE_VOICE_ASSISTANT=true

# Performance
NEXT_SHARP_PATH=/tmp/node_modules/sharp
ANALYZE_BUNDLE=false

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=crowe-backups
BACKUP_SCHEDULE="0 2 * * *"
